<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <controls>
    <include>FullBackground</include>
    <control type="group">
      <include>OpenClose</include>
      <include>View_50</include>
      <include>View_52</include>
      <include>View_53</include>
      <include>View_59_Showcase</include>
      <include>Scroller</include>
      <control type="list" id="51" description="List 51">
        <visible>container.content(songs)</visible>
        <left>140</left>
        <top>390</top>
        <width>920</width>
        <height>636</height>
        <onright>9002</onright>
        <onleft>9000</onleft>
        <pagecontrol>60</pagecontrol>
        <viewtype label="537">Big List 51</viewtype>
        <preloaditems>4</preloaditems>
        <itemlayout condition="container.content(songs)" width="920" height="106">
          <control type="label" description="Main Label">
            <left>40</left>
            <right>125</right>
            <top>0</top>
            <height>66</height>
            <font>size20</font>
            <scroll>false</scroll>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Album">
            <left>40</left>
            <right>125</right>
            <bottom>0</bottom>
            <height>66</height>
            <font>size16</font>
            <scroll>false</scroll>
            <label>$INFO[ListItem.Album]</label>
          </control>
          <control type="label" description="Duration">
            <visible>!ListItem.IsPlaying</visible>
            <right>76</right>
            <top>0</top>
            <height>106</height>
            <width>330</width>
            <font>size16</font>
            <align>right</align>
            <label>$INFO[ListItem.Duration]</label>
          </control>
          <control type="image" description="playing">
            <visible>ListItem.IsPlaying</visible>
            <right>76</right>
            <top>0</top>
            <height>106</height>
            <width>36</width>
            <aspectratio>keep</aspectratio>
            <texture colordiffuse="$VAR[SelectedColor]">img/NowPlayingFO.png</texture>
          </control>
        </itemlayout>
        <focusedlayout condition="container.content(songs)" width="920" height="106">
          <control type="group">
            <include>FocusButtonsAnimation</include>
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>16</left>
              <top>9</top>
              <width>848</width>
              <height>88</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-10</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <left>40</left>
              <right>125</right>
              <top>0</top>
              <height>66</height>
              <font>size20</font>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="Album">
              <left>40</left>
              <right>125</right>
              <bottom>0</bottom>
              <height>66</height>
              <font>size16</font>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Album]</label>
            </control>
            <control type="label" description="Duration">
              <visible>!ListItem.IsPlaying</visible>
              <right>76</right>
              <top>0</top>
              <height>106</height>
              <width>330</width>
              <font>size16</font>
              <align>right</align>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Duration]</label>
            </control>
            <control type="image" description="playing">
              <visible>ListItem.IsPlaying</visible>
              <right>76</right>
              <top>0</top>
              <height>106</height>
              <width>36</width>
              <aspectratio>keep</aspectratio>
              <texture colordiffuse="$VAR[SelectedColor]">img/NowPlayingFO.png</texture>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="group" description="51 furniture">
        <visible>Control.IsVisible(51)</visible>
        <include>ContainerVisibleFade</include>
<!--         <control type="image" description="Pointer Left">
          <animation effect="fade" start="100" end="0" time="300" delay="3000" condition="Control.IsVisible(51) + !ControlGroup(9000).HasFocus()">Conditional</animation>
          <width>96</width>
          <height>96</height>
          <left>-15</left>
          <centertop>50%</centertop>
          <aspectratio>keep</aspectratio>
          <texture colordiffuse="$VAR[LabelNFColor]">icons/ArrowL.png</texture>
        </control> -->
        <control type="label" description="Show Label">
          <left>180</left>
          <top>80</top>
          <font>size28B</font>
          <width>800</width>
          <textcolor>$VAR[LabelNFColor]</textcolor>
          <label>[B]$INFO[ListItem.Artist][/B]</label>
        </control>
        <control type="label">
          <left>180</left>
          <top>132</top>
          <font>size22</font>
          <width>800</width>
          <textcolor>$VAR[LabelNFColor]</textcolor>
          <label>$INFO[ListItem.Album]</label>
        </control>
        <control type="label" description="Genre">
          <left>180</left>
          <top>200</top>
          <font>size20</font>
          <width>800</width>
          <textcolor>$VAR[LabelNFColor]</textcolor>
          <label>$INFO[ListItem.Genre]</label>
        </control>
        <control type="image" description="Thumb">
          <centertop>460</centertop>
          <centerleft>1510</centerleft>
          <width>640</width>
          <height>640</height>
          <include>Icon_Fade</include>
          <texture background="true">$INFO[ListItem.Thumb]</texture>
          <aspectratio align="center" aligny="center">keep</aspectratio>
          <bordertexture border="12">img/ThumbBorder.png</bordertexture>
          <bordersize>4</bordersize>
        </control>
        <control type="grouplist" id="9002">
          <left>1192</left>
          <top>830</top>
          <width>638</width>
          <height>150</height>
          <itemgap>20</itemgap>
          <onleft>51</onleft>
          <onright>noop</onright>
          <onup>51</onup>
          <ondown>51</ondown>
          <align>center</align>
          <orientation>horizontal</orientation>
          <control type="button" id="16" description="Party">
            <texturefocus>buttons/PartyFO.png</texturefocus>
            <texturenofocus>buttons/PartyNF.png</texturenofocus>
            <label>$LOCALIZE[589]</label>
            <include>SquareButtonCommons</include>
            <include>FocusButtonsAnimation</include>
          </control>
          <control type="button" id="697" description="Queued">
            <onclick>ActivateWindow(musicplaylist)</onclick>
            <texturefocus>buttons/PlaylistFO.png</texturefocus>
            <texturenofocus>buttons/PlaylistNF.png</texturenofocus>
            <label>$LOCALIZE[31062]</label>
            <include>SquareButtonCommons</include>
            <include>FocusButtonsAnimation</include>
          </control>
          <control type="button" id="699" description="Player Fullscreen">
            <visible>Player.HasMedia</visible>
            <onclick condition="Player.HasMedia">fullscreen</onclick>
            <texturefocus>buttons/FullscreenFO.png</texturefocus>
            <texturenofocus>buttons/FullscreenNF.png</texturenofocus>
            <label>$LOCALIZE[16003]</label>
            <include>SquareButtonCommons</include>
            <include>FocusButtonsAnimation</include>
          </control>
        </control>
      </control>
      <control type="group" description="Side menu 9000 group">
        <include>Menu9000</include>
        <include>VisibleFadeEffect</include>
        <control type="grouplist" id="9000">
          <include>9000GrouplistParameters</include>
          <control type="button" id="2" description="Views">
            <include>9000Buttons</include>
          </control>
          <control type="button" id="3" description="Sort">
            <include>9000Buttons</include>
          </control>
          <control type="togglebutton" id="4" description="Ordering">
            <include>9000Buttons</include>
            <label>$LOCALIZE[21429]: $LOCALIZE[584]</label>
            <altlabel>$LOCALIZE[21429]: $LOCALIZE[585]</altlabel>
          </control>
          <control type="edit" id="19" description="Search">
            <include>9000Buttons</include>
            <hinttext>$LOCALIZE[137]</hinttext>
            <!--<label>$LOCALIZE[137]</label>-->
          </control>
          <control type="image" description="separator" id="98">
            <height>3</height>
            <include>9000Buttons</include>
            <texture colordiffuse="$VAR[LabelNFColor]">img/LineST.png</texture>
          </control>
          <control type="togglebutton" id="99" description="Update library">
            <visible>Library.HasContent(music) + !Container.Content(addons)</visible>
            <include>9000Buttons</include>
            <label>$LOCALIZE[653]</label>
						<altlabel>$LOCALIZE[13353]</altlabel>
            <onclick>UpdateLibrary(music)</onclick>
						<usealttexture>library.isscanningmusic</usealttexture>
          </control>
        </control>
      </control>
    </control>
  </controls>
</window>
