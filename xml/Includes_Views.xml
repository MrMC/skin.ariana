  <include name="9000Buttons">
    <animation type="Focus" reversible="true">
      <effect type="zoom" center="auto" start="100" end="104" time="100" easing="inout"/>
    </animation>
    <width>420</width>
    <align>left</align>
  </include>
  <include name="Scroller">
    <control type="group" description="Scroller">
      <visible>[Container.HasNext | Container.HasPrevious]</visible>
      <animation condition="Control.HasFocus(61)" effect="slide" start="0,0" end="-270,0" time="200" reversible="false">Conditional</animation>
      <animation condition="!Control.HasFocus(61)" effect="slide" start="-270,0" end="0,0" time="300" reversible="false">Conditional</animation>
      <control type="scrollbar" id="60">
        <right>-500</right>
        <top>0</top>
        <width>36</width>
        <height>100%</height>
        <texturesliderbackground/>
        <texturesliderbar/>
        <texturesliderbarfocus/>
        <textureslidernib/>
        <textureslidernibfocus/>
        <orientation>vertical</orientation>
      </control>
      <control type="image" description="Background">
        <right>-240</right>
        <centertop>50%</centertop>
        <width>240</width>
        <height>360</height>
        <texture border="24" colordiffuse="$VAR[OverlayColor]">common/Menu.png</texture>
        <bordersize>-9</bordersize>
        <aligny>center</aligny>
      </control>
      <control type="image" description="PgUp">
        <visible>Container.HasPrevious</visible>
        <centertop>40%</centertop>
        <right>-165</right>
        <width>90</width>
        <height>90</height>
        <texture colordiffuse="$VAR[Label2Color]">icons/PageUp.png</texture>
        <aspectratio>keep</aspectratio>
        <aligny>center</aligny>
      </control>
      <control type="image" description="PageDown">
        <visible>Container.HasNext</visible>
        <centertop>60%</centertop>
        <right>-165</right>
        <width>90</width>
        <height>90</height>
        <texture colordiffuse="$VAR[Label2Color]">icons/PageDown.png</texture>
        <aspectratio>keep</aspectratio>
        <aligny>center</aligny>
      </control>
      <control type="button" id="61" description="Sort">
        <centertop>50%</centertop>
        <right>-240</right>
        <width>240</width>
        <height>120</height>
        <align>center</align>
        <font>SortLetter</font>
        <texturefocus/>
        <texturenofocus/>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <focusedcolor>$VAR[LabelNFColor]</focusedcolor>
        <label>$VAR[SortLetterLabel]</label>
        <onup>pageup(60)</onup>
        <ondown>pagedown(60)</ondown>
        <onleft>50</onleft>
        <onright>noop</onright>
        <onback>50</onback>
      </control>
      <control type="image" description="Pointer R">
        <animation condition="!Control.HasFocus(61)" effect="fade" start="0" end="100" time="300" delay="300" reversible="false">Conditional</animation>
        <animation condition="Control.HasFocus(61)" effect="fade" start="100" end="0" time="0" reversible="false">Conditional</animation>
        <centertop>50%</centertop>
        <width>96</width>
        <height>96</height>
        <right>5</right>
        <aspectratio>keep</aspectratio>
        <texture colordiffuse="$VAR[Label2Color]">icons/ArrowR.png</texture>
      </control>
    </control>
  </include>
