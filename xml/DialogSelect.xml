<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>3</defaultcontrol>
  <controls>
    <include>DialogFullBG</include>
    <control type="group">
      <include>OpenClose</include>
      <control type="label" id="1" description="Header label">
        <include>CenterHeading</include>
        <label>13406</label>
      </control>
      <control type="panel" id="3" description="thumbs">
        <left>120</left>
        <top>220</top>
        <width>828</width>
        <height>770</height>
        <onleft>5</onleft>
        <onright>5</onright>
        <itemlayout height="110">
          <control type="image">
            <left>0</left>
            <top>0</top>
            <width>100%</width>
            <height>100</height>
            <texture border="10">focus/FrameNF.png</texture>
            <bordersize>-5</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <visible>!IsEmpty(ListItem.Thumb)</visible>
            <left>5</left>
            <top>4</top>
            <width>90</width>
            <height>90</height>
            <texture>$INFO[ListItem.Thumb]</texture>
            <aspectratio align="left" aligny="center">keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <visible>!IsEmpty(ListItem.Thumb)</visible>
            <left>120</left>
            <right>70</right>
            <height>90%</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label][CR]$INFO[ListItem.Property(Addon.Version), - $LOCALIZE[24051] ]$INFO[ListItem.Property(Addon.Creator), • ]</label>
            <scroll>false</scroll>
          </control>
          <control type="label" description="Main Label">
            <visible>IsEmpty(ListItem.Thumb)</visible>
            <left>20</left>
            <right>70</right>
            <height>90%</height>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="image">
            <visible>ListItem.IsSelected</visible>
            <right>20</right>
            <top>0</top>
            <width>30</width>
            <height>90%</height>
            <texture colordiffuse="$VAR[LabelNFColor]">img/RadioON.png</texture>
            <aspectratio aligny="center">keep</aspectratio>
          </control>
        </itemlayout>
        <focusedlayout height="110">
          <control type="group">
            <include>FocusButtonsAnimation</include>
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>0</left>
              <right>0</right>
              <top>0</top>
              <height>100</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-5</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
              <visible>!IsEmpty(ListItem.Thumb)</visible>
              <left>5</left>
              <top>4</top>
              <width>90</width>
              <height>90</height>
              <texture>$INFO[ListItem.Thumb]</texture>
              <aspectratio align="left" aligny="center">keep</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <visible>!IsEmpty(ListItem.Thumb)</visible>
              <left>120</left>
              <right>70</right>
              <height>90%</height>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label][CR]$INFO[ListItem.Property(Addon.Version), - $LOCALIZE[24051] ]$INFO[ListItem.Property(Addon.Creator), • ]</label>
              <scroll>false</scroll>
            </control>
            <control type="label" description="Main Label">
              <visible>IsEmpty(ListItem.Thumb)</visible>
              <left>20</left>
              <right>70</right>
              <height>90%</height>
              <textcolor>$VAR[LabelFOColor]</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="image">
              <visible>ListItem.IsSelected</visible>
              <right>20</right>
              <top>0</top>
              <width>30</width>
              <height>90%</height>
              <texture colordiffuse="$VAR[LabelFOColor]">img/RadioON.png</texture>
              <aspectratio aligny="center">keep</aspectratio>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="button" id="5" description="Left buttons template">
        <centerright>25%</centerright>
        <top>900</top>
        <texturefocus colordiffuse="green">buttons/OKFO.png</texturefocus>
        <texturenofocus>buttons/OKNF.png</texturenofocus>
        <include>SquareButtonCommons</include>
        <onleft>3</onleft>
        <onright>3</onright>
      </control>
      <control type="image" description="Item Thumb">
        <visible>IsEmpty(Container(3).ListItem.Thumb)</visible>
        <centerleft>75%</centerleft>
        <top>270</top>
        <width>400</width>
        <height>400</height>
        <fadetime>200</fadetime>
        <texture>Logo_square.png</texture>
        <aspectratio aligny="center" align="center">keep</aspectratio>
      </control>
      <control type="image" description="Item Thumb">
        <visible>!IsEmpty(Container(3).ListItem.Thumb)</visible>
        <centerleft>75%</centerleft>
        <top>270</top>
        <width>400</width>
        <height>400</height>
        <fadetime>200</fadetime>
        <texture>$INFO[Container(3).ListItem.Thumb]</texture>
        <aspectratio aligny="center" align="center">keep</aspectratio>
      </control>
    </control>
  </controls>
</window>
