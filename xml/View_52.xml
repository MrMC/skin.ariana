<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="View_52" description="52">
    <control type="list" id="52" description="Movie shows list">
      <visible>container.content(Movies) | container.content(TVshows) | container.content(seasons) | container.content(episodes) | container.content(musicvideos)</visible>
      <right>66</right>
      <top>248</top>
      <width>800</width>
      <bottom>76</bottom>
      <onleft>9000</onleft>
      <onright>61</onright>
      <pagecontrol>60</pagecontrol>
      <viewtype label="535">List 52</viewtype>
      <preloaditems>4</preloaditems>
      <itemlayout width="800" height="84">
        <control type="image">
          <left>20</left>
          <top>0</top>
          <height>84</height>
          <width>28</width>
          <texture colordiffuse="$VAR[LabelNFColor]" align="left" aligny="center">$VAR[Overlay]</texture>
          <aspectratio>keep</aspectratio>
        </control>
        <control type="label" description="Main Label">
          <left>70</left>
          <width>600</width>
          <top>0</top>
          <height>84</height>
          <font>size22</font>
          <scroll>false</scroll>
          <textcolor>$VAR[LabelNFColor]</textcolor>
          <label>$INFO[ListItem.Label]</label>
        </control>
        <control type="label" description="Label2">
          <visible>container.content(movies)</visible>
          <right>30</right>
          <top>0</top>
          <align>right</align>
          <height>84</height>
          <font>size19</font>
          <scroll>false</scroll>
          <textcolor>$VAR[Label2Color]</textcolor>
          <label>$INFO[ListItem.Duration,, $LOCALIZE[31297]]</label>
        </control>
        <control type="label" description="Label2">
          <visible>container.content(seasons) | container.content(TVshows)</visible>
          <visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
          <right>30</right>
          <top>0</top>
          <align>right</align>
          <height>84</height>
          <font>size19</font>
          <scroll>false</scroll>
          <textcolor>$VAR[Label2Color]</textcolor>
          <label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
        </control>
        <control type="image" description="arrow">
          <visible>ListItem.IsCollection</visible>
          <right>20</right>
          <top>0</top>
          <height>80</height>
          <width>40</width>
          <align>right</align>
          <aspectratio>keep</aspectratio>
          <texture colordiffuse="$VAR[Label2Color]">img/Arrow.png</texture>
        </control>
      </itemlayout>
      <focusedlayout width="800" height="84">
        <control type="group">
          <include>FocusButtonsAnimation</include>
          <control type="image">
            <animation effect="fade" time="100">VisibleChange</animation>
            <left>10</left>
            <top>10</top>
            <width>770</width>
            <height>64</height>
            <texture border="10">focus/FrameFO.png</texture>
            <bordersize>-10</bordersize>
            <aspectratio>stretch</aspectratio>
          </control>
          <control type="image">
            <left>20</left>
            <top>0</top>
            <height>84</height>
            <width>28</width>
            <texture colordiffuse="$VAR[LabelFOColor]" align="left">$VAR[Overlay]</texture>
            <aspectratio>keep</aspectratio>
          </control>
          <control type="label" description="Main Label">
            <left>70</left>
            <width>600</width>
            <top>0</top>
            <height>84</height>
            <font>size22</font>
            <textcolor>$VAR[LabelFOColor]</textcolor>
            <label>$INFO[ListItem.Label]</label>
          </control>
          <control type="label" description="Label2">
            <visible>container.content(movies)</visible>
            <right>30</right>
            <top>0</top>
            <align>right</align>
            <height>84</height>
            <font>size19</font>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Duration,, $LOCALIZE[31297]]</label>
          </control>
          <control type="label" description="Label2">
            <visible>container.content(seasons) | container.content(TVshows)</visible>
            <visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
            <right>30</right>
            <top>0</top>
            <align>right</align>
            <height>84</height>
            <font>size19</font>
            <textcolor>$VAR[Label2Color]</textcolor>
            <label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
          </control>
          <control type="image" description="arrow">
            <visible>ListItem.IsCollection</visible>
            <right>30</right>
            <top>0</top>
            <height>80</height>
            <width>40</width>
            <aspectratio>keep</aspectratio>
            <align>right</align>
            <texture colordiffuse="$VAR[LabelFOColor]">img/Arrow.png</texture>
          </control>
        </control>
      </focusedlayout>
    </control>
    <control type="group" description="52 Furniture">
      <visible>Control.IsVisible(52)</visible>
      <include>ContainerVisibleFade</include>
      <include>FanartBG</include>
      <control type="image" description="Pointer Left">
        <visible>!ControlGroup(9000).HasFocus()</visible>
        <animation effect="fade" start="100" end="0" time="300" delay="3000" condition="Control.IsVisible(52)">Conditional</animation>
        <width>96</width>
        <height>96</height>
        <left>-15</left>
        <centertop>50%</centertop>
        <aspectratio>keep</aspectratio>
        <texture colordiffuse="$VAR[LabelNFColor]">icons/ArrowL.png</texture>
      </control>
      <control type="label" description="MainHeading">
        <right>66</right>
        <top>120</top>
        <width>800</width>
        <height>40</height>
        <font>size50B</font>
        <label>[B]$VAR[GlobalHeadings][/B]</label>
        <textcolor>$VAR[LabelNFColor]</textcolor>
        <align>center</align>
      </control>
      <control type="image" description="Collection Thumb">
        <visible>ListItem.IsCollection</visible>
        <include>VisibleFadeEffect</include>
        <centerleft>480</centerleft>
        <centertop>580</centertop>
        <width>600</width>
        <height>760</height>
        <include>Icon_Fade</include>
        <texture background="true">$INFO[ListItem.Thumb]</texture>
        <bordertexture border="12">img/ThumbBorder.png</bordertexture>
        <bordersize>9</bordersize>
        <aspectratio>keep</aspectratio>
      </control>
      <control type="group" description="Media info">
        <visible>container.content(movies) | container.content(tvshows) | container.content(seasons) | container.content(episodes)</visible>
        <visible>!ListItem.IsCollection</visible>
        <include>VisibleFadeEffect</include>
        <left>100</left>
        <top>-75</top>
        <control type="image" description="Thumb">
          <visible>!Skin.HasSetting(FanartInList)</visible>
          <top>186</top>
          <left>0</left>
          <width>756</width>
          <height>495</height>
          <include>Icon_Fade</include>
          <texture background="true">$INFO[ListItem.Thumb]</texture>
          <aspectratio aligny="bottom">keep</aspectratio>
          <bordertexture border="9">img/ThumbBorder.png</bordertexture>
          <bordersize>7</bordersize>
        </control>
        <control type="image" description="FA">
          <visible>Skin.HasSetting(FanartInList)</visible>
          <top>186</top>
          <left>0</left>
          <width>756</width>
          <height>495</height>
          <include>Fanart_Fade</include>
          <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
          <aspectratio aligny="bottom">keep</aspectratio>
          <bordertexture border="12">img/ThumbBorder.png</bordertexture>
          <bordersize>4</bordersize>
        </control>
        <control type="group" description="Media info Top">
          <left>0</left>
          <top>742</top>
          <control type="label" description="Main Label">
            <top>-14</top>
            <width>758</width>
            <font>size22</font>
            <textcolor>$VAR[LabelNFColor]</textcolor>
            <label>[B]$INFO[ListItem.Title][/B]</label>
          </control>
          <control type="textbox" description="Plot">
            <top>58</top>
            <width>758</width>
            <height>170</height>
            <font>plot</font>
            <align>left</align>
            <aligny>bottom</aligny>
            <label>$VAR[Plots]</label>
          </control>
          <control type="label">
            <top>240</top>
            <width>758</width>
            <font>size19</font>
            <label>$VAR[TopLabel]</label>
          </control>
          <control type="label" description="Details">
            <top>278</top>
            <width>758</width>
            <font>size19</font>
            <label>$VAR[CodecList-Genre]</label>
          </control>
        </control>
      </control>
    </control>
  </include>
</includes>
